<CameraScreen>:
    GridLayout:
        cols: 1
        Camera:
            id: camera
            resolution: (640, 480)
            play: False
            size_hint_y: 0.8
        Button:
            id: start
            text: 'Start Camera'
            size_hint_y: 0.1
            on_press: root.start() if root.ids.camera.play == False else root.stop()
        Button:
            text: 'Capture'
            on_press: root.capture()
            size_hint_y: 0.1

<ImageScreen>:
    GridLayout:
        cols : 1
        Image:
            id: img
            size_hint_y: 0.7
        Button:
            text: 'Create Sharable Link'
            size_hint_y: 0.1
            on_press: root.create_link()
        Label:
            id: link
            text: ''
            size_hint_y: 0.1
        GridLayout:
            cols: 2
            Button:
                text: 'Copy Link'
                on_press: root.copy_link()

            Button:
                text: 'Open Link'
                on_press: root.open_link()

<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'



